{
  "KafkaConfig": {
    "SchemaRegistryUrl": "http://localhost:8081",
    "BootstrapServers": "kafkaserver:9092",
    "ParrotsStreamingTopic": "Parrots.Streaming",
    "ParrotsBusinessEventsTopic": "Parrots.Events",
    "TasksStreamingTopic": "Tasks.Events",
    "TasksBusinessEventsTopic": "Tasks.Events"
  },
  "PersistenceConfig": {
    "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=Accounting;Integrated security=True;MultipleActiveResultSets=True;App=Accounting",
    "EnableTracing": true
  },
  "WebConfig": {
    "Port": 34567,
    "DefaultLocale": "ru",
    "InternalApiConfig": {
      "RoutePrefix": "/api/internals",
      "DocumentName": "internals",
      "SwaggerEndpointUrl": "/swagger/internals/swagger.json",
      "SwaggerTitle": "Internal API Area",
      "ControllerBaseClassName": "Accounting.Web.InternalArea.Utils.Web.InternalAreaControllerBase"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3} {SourceContext} {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}